{
    "name": "playbox",
    "productName": "Playbox",
    "version": "0.2.0",
    "description": "An audio playback system for the live production industry.",
    "main": "main.js",
    "repository": {
        "type": "git",
        "url": "https://github.com/cjdenio/playbox.git"
    },
    "scripts": {
        "start": "electron ."
    },
    "build": {
        "win": {
            "target": "nsis"
        },
        "mac": {
            "target": [
                "dmg",
                "pkg"
            ]
        },
        "linux": {
            "target": [
                "appImage",
                "deb"
            ]
        },
        "nsis": {
            "oneClick": false,
            "allowToChangeInstallationDirectory": true
        },
        "asar": true
    },
    "keywords": [
        "audio"
    ],
    "author": "Caleb Denio",
    "license": "ISC",
    "devDependencies": {
        "electron": "^4.1.1",
        "electron-builder": "^20.40.2",
        "electron-json-storage": "^4.1.6"
    }
}